@model List<Category>
<div>
    <a type="button" class="btn btn-primary " asp-action="Create" asp-controller="Category">Create</a>
    <table class="table table-striped table-bordered text-center mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-items-center">
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@(category.Type == 1 ? "Income" : "Outcome")</td>
                    <td>
                        <a  type="button" asp-action="Edit" asp-route-id="@category.Id" asp-controller="Category" class="btn btn-outline-primary ">Edit</a>
                        <a type="button" asp-action="Delete" asp-route-id="@category.Id" asp-controller="Category" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>